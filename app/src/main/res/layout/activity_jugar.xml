<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.JugarActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewBombas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="30dp" />
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gridViewMapa"
        android:layout_width="wrap_content"
        android:layout_height="364dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp" />

    <LinearLayout
        android:id="@+id/linearLayoutFinPartida"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/textViewFinPartida"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="10dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:backgroundTint="@color/grey"
                android:text="Nueva partida"
                android:onClick="onClickNuevaPartida"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/grey"
                android:text="Menu"
                android:onClick="onClickMenu"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>