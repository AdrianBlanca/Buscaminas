<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/botonFacil"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"
            android:text="FACIL"
            android:textSize="15dp"
            android:onClick="onClickFacil"/>
        <Button
            android:id="@+id/botonMedio"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"
            android:text="MEDIO"
            android:textSize="15dp"
            android:onClick="onClickMedio"/>

        <Button
            android:id="@+id/botonDificil"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/grey"
            android:text="DIFICIL"
            android:textSize="15dp"
            android:onClick="onClickDificil"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenMapa"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/textViewDatos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/botonAceptar"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/grey"
            android:text="ACEPTAR"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:onClick="onClickAceptar"
            />
    </RelativeLayout>
</LinearLayout>